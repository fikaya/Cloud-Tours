@model BusModelDTO
 
<h3>Delete</h3>

<div class="container row">


    @if (ViewBag.CommandResult != null)
    {
        var result = (CommandResult)ViewBag.CommandResult;

        foreach (var item in result.Messages)
        {
            <div class="alert alert-danger col-12" )>
                @item
            </div>
        }
    }

    <div class="col-12 col-sm-8 col-md-6">
        <div class="alert alert-warning">
            Silmek istediğinize emin misiniz ?
        </div>
    </div>
</div>


<div class="row container">

    <div class="col-lg-12 col-sm-10 col-md-8 p-0">

        <form method="post" asp-action="Delete">

            <input type="hidden" asp-for="@Model.BusModelId" />
            <input type="hidden" asp-for="@Model.BusManuFacturerId" />


            <div>

                <label class="ml-0">Model Adı</label>
                <div class="ml-0 form-control col-12 mt-2">
                    @Model.BusModelName
                </div>

            </div>

            <div class="float-right mt-2">
                <button class="btn btn-danger text-center p-2 mr-4" type="submit">Onayla</button>
                <a class="btn btn-success" asp-controller="BusModel" asp-action="Index">İptal</a>
            </div>

        </form>

    </div>

</div>
