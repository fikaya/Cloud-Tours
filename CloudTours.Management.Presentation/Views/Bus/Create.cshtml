@model BusDTO
 
<h3>Yeni Otobüs Ekleme </h3>

<div class="container row">

    @if (ViewBag.CommandResult != null)
    {
        var result = (CommandResult)ViewBag.CommandResult;

        foreach (var item in result.Messages)
        {
            <div class="alert alert-danger col-12" )>
                @item
            </div>
        }
    }

    <div class="col-12 col-sm-8 col-md-6">
        <form method="post" class="was-validated" asp-action="Create" asp-controller="Bus">

            <div>

                <div>
                    <label asp-for="RegistrationPlate">Plaka Adı</label>
                    <input type="text" asp-for="RegistrationPlate" class="form-control" placeholder="Plaka Giriniz" required autocomplete="off" />
                </div>

                <div class="mt-3">
                    <label asp-for="BusModelId">Model</label>
                    <select class="form-control " asp-for="BusModelId" asp-items="@ViewBag.Buses"></select>
                </div>


                @*/Name=Value BusModelId=1 /*@

                <div class="mt-3">
                    <label asp-for="SeatMapping">Refah Düzeyi</label>
                    <select class="form-control " asp-for="SeatMapping" asp-items="@Html.GetEnumSelectList<SeatingType>()"></select>
                </div>

                <div class="mt-3">
                    <label asp-for="Year">Yıl</label>
                    <input type="datetime" asp-for="Year" class="form-control" placeholder="Yıl Giriniz" required autocomplete="off" />
                </div>

                <div class="mt-3">
                    <label asp-for="DistanceTraveled">Kilometre</label>
                    <input type="number" asp-for="DistanceTraveled" class="form-control" placeholder="Kilometre Giriniz" required autocomplete="off" />
                </div>

                <div class="valid-feedback"></div>

                <div class="invalid feedback"></div>

            </div>

            <div class="mt-2 float-right">
                <button class="btn btn-success over text-center" type="Submit">Kaydet</button>
            </div>

        </form>
    </div>

</div>

